journal = {Nature Climate Change},
keywords = {Climate,Energy modelling,Socioeconomic scenarios,change mitigation},
month = {mar},
number = {3},
pages = {266--273},
publisher = {Nature Publishing Group},
title = {{Sources of uncertainty in long-term global scenarios of solar photovoltaic technology}},
url = {http://www.nature.com/articles/s41558-021-00998-8},
volume = {11},
