journal = {Nature Climate Change},
keywords = {Business,Climate change,Projection and prediction},
month = {feb},
pages = {1--8},
publisher = {Nature Publishing Group},
title = {{Business risk and the emergence of climate analytics}},
url = {http://www.nature.com/articles/s41558-020-00984-6},
year = {2021}
}
