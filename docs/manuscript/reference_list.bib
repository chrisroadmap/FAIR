issn = {23643587},
journal = {Advances in Statistical Climatology, Meteorology and Oceanography},
month = {sep},
number = {2},
pages = {91--102},
publisher = {Copernicus GmbH},
title = {{A new energy-balance approach to linear filtering for estimating effective radiative forcing from temperature time series}},
url = {https://ascmo.copernicus.org/articles/6/91/2020/},
