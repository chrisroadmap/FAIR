journal = {Nature Climate Change},
keywords = {Attribution,Climate,Climate and Earth system modelling,Projection and prediction,change impacts},
month = {may},
pages = {1--6},
publisher = {Nature Publishing Group},
title = {{Present-day greenhouse gases could cause more frequent and longer Dust Bowl heatwaves}},
url = {http://www.nature.com/articles/s41558-020-0771-7},
year = {2020}
}
