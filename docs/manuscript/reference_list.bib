pages = {7599--7615},
publisher = {Blackwell Publishing Ltd},
title = {{Quantifying components of aerosol-cloud-radiation interactions in climate models}},
url = {https://agupubs.onlinelibrary.wiley.com/doi/full/10.1002/2014JD021710 https://agupubs.onlinelibrary.wiley.com/doi/abs/10.1002/2014JD021710 https://agupubs.onlinelibrary.wiley.com/doi/10.1002/2014JD021710},
