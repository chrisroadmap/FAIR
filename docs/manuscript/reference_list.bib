doi = {10.1016/j.future.2013.07.002},
issn = {0167739X},
journal = {Future Generation Computer Systems},
keywords = {CMIP5,Climate science,Discovery,Federation,Peer-to-peer,Search},
month = {jul},
pages = {400--417},
