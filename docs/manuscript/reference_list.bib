issn = {1752-0894},
journal = {Nature Geoscience},
month = {oct},
publisher = {Springer Science and Business Media LLC},
title = {{Emergent constraints on Earth's transient and equilibrium response to doubled CO2 from post-1970s global warming}},
year = {2019}
}
@article{Johansson2020,
abstract = {9 Global net-negative carbon emissions are prevalent in almost all emission pathways that meet the 10 Paris temperature targets. In this paper we generate and compare cost-effective emission 11 pathways that satisfy two different types of climate targets. First, the common approach of a 12 radiative forcing target that has to be met by the year 2100 (RF2100), and, second, a temperature 13 ceiling target that has to be met over the entire period, avoiding any overshoot. Across two 14 Integrated Assessment Models (IAMs), we found that the amount of net-negative emissions-15 when global net emissions fall below zero-depends to a large extent on how the target is 16 represented, i.e. implemented in the model. With a temperature ceiling (no temperature 17 overshoot), net-negative emissions are limited and primarily a consequence of trade-offs with non-18 CO2 emissions, whereas net-negative emissions are significant for the RF2100 target (temperature 19 overshoot). The difference becomes more pronounced with more stringent climate targets. This 20 has important implications: more stringent near-term emission reductions are needed when a 21 temperature ceiling is implemented compared to when an RF2100 target is implemented. Further, 22 in one IAM, for our base case assumptions, the cost-effective negative carbon emissions (i.e. gross 23 anthropogenic removals) do not depend to any significant extent on how the constraint is 24 implemented, only, largely, on the ultimate stringency of the constraint. Hence, for a given climate 25 target stringency in 2100, the RF2100 target and the temperature ceiling may result in essentially 26 the same amount of negative carbon emissions. Finally, it is important that integrated assessment 27 modelers demonstrate results for diverse ways of implementing a climate target, since the 28 implementation has implications for the level of near-term emissions and the perceived need for 29 net-negative emissions (beyond 2050). 30},
