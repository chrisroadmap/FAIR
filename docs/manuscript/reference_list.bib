issn = {0035-9009},
journal = {Quarterly Journal of the Royal Meteorological Society},
number = {724},
pages = {2973--2989},
publisher = {Wiley},
title = {{Processes determining heat waves across different European climates}},
url = {https://onlinelibrary.wiley.com/doi/abs/10.1002/qj.3599},
