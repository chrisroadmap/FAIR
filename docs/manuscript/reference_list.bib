file = {:home/leachl/Downloads/Mendeley_download_docs/Gates82.pdf:pdf},
issn = {0148-0227},
journal = {Journal of Geophysical Research},
month = {jul},
number = {C7},
pages = {6385},
publisher = {John Wiley & Sons, Ltd},
title = {{Preliminary analysis of experiments on the climatic effects of increased CO 2 with an atmospheric general circulation model and a climatological ocean}},
