journal = {Atmospheric Chemistry and Physics},
number = {17},
pages = {4537--4552},
publisher = {European Geosciences Union},
title = {{A new formulation of equivalent effective stratospheric chlorine (EESC)}},
volume = {7},
year = {2007}
}
